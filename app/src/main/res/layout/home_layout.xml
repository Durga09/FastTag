<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <include
        android:id="@+id/header_layout_1"
        layout="@layout/agent_header"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Create Agent"
        android:onClick="createAgent"
        android:id="@+id/create_agent_by_lead"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/green_button_corner"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_fat_recharge"
        android:gravity="bottom"

        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_180sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/rl_buy_fasttag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="buyFastTag"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_build_process"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/fasttag_logo"
                    />

                <TextView
                    android:id="@+id/tv_build_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_build_process"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Buy FasTag"
                    app:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/rl_home_care"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_home_care"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/wallet"
                    />

                <TextView
                    android:id="@+id/tv_home_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_home_care"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2sp"
                    android:text="Recharge FastTag"
                    app:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_create_agents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="top"
        android:visibility="visible"
        android:layout_weight="1"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_180sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/rl_create_team_lead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="createTeamLead"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_create_team_lead"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/leadership"
                    />

                <TextView
                    android:id="@+id/tv_create_team_leads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_create_team_lead"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Create Team Lead"
                    app:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/rl_create_agent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="createAgent"

                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_create_agent"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/agent"
                    />

                <TextView
                    android:id="@+id/tv_create_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_create_agent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2sp"
                    android:text="Create Agent"
                    app:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>

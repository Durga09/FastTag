<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/agent_header_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >
        <include layout="@layout/agent_header"
            android:id="@+id/header_layout"/>
        ></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/rl_amount"

        app:layout_constraintTop_toBottomOf="@+id/agent_header_layout"
        android:background="@drawable/green_button_corner">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/montserrat_semibold"
            android:paddingTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/Rs"
            android:textColor="@color/white"
            android:textSize="22sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_amount"
            android:gravity="bottom"
            android:padding="@dimen/_5sdp"
            android:background="@color/light_grey"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Agent"
                android:id="@+id/user_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/montserrat_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="right"
                android:text="Durga Prasad "
                android:id="@+id/role_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/montserrat_regular" />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pay_button"
        android:textSize="14sp"
        android:text="Proceed to pay"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@color/orange_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>